{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "./dist",
    "./build",
    "./scripts",
    "./.storybook",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "*.config.ts",
    "*.config.js",
    "*.config.mts",
    "*.config.mjs"
  ]
}